{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": ["node"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.tsx",
      ],
      "exclude": [
        "dist/",
        "jest.config.ts",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/*.test.tsx",
        "**/*.spec.tsx",
        {{#if isAPP}}
        "./src/testUtils/**/*",
        "./cypress/**/*"
        {{else}}
        "./src/testUtils/**/*"
        {{/if}}
      ]
}
